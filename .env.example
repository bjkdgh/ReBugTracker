# ReBugTracker 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 数据库类型选择
# 可选值: postgres, sqlite
DB_TYPE=postgres

# PostgreSQL 数据库配置（当 DB_TYPE=postgres 时使用）
POSTGRES_PASSWORD=ReBugTracker2024
POSTGRES_USER=postgres
POSTGRES_DB=rebugtracker
POSTGRES_HOST=db
POSTGRES_PORT=5432

# SQLite 数据库配置（当 DB_TYPE=sqlite 时使用）
SQLITE_PATH=/app/data/rebugtracker.db

# Flask 应用配置
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here

# 应用端口配置
APP_PORT=5000

# 文件上传配置
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/rebugtracker.log

# 时区配置
TZ=Asia/Shanghai

# 通知系统配置
# 邮件通知
EMAIL_NOTIFICATIONS_ENABLED=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@rebugtracker.com
FROM_NAME=ReBugTracker
SMTP_USE_TLS=true

# Gotify通知
GOTIFY_ENABLED=false
GOTIFY_SERVER_URL=http://localhost:8080
GOTIFY_APP_TOKEN=your_gotify_app_token
GOTIFY_DEFAULT_PRIORITY=10

# 应用基础URL（用于通知中的链接）
BASE_URL=http://localhost:5000
